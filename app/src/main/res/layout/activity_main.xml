<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primaryBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/screen_time_entry"
            android:textColor="@color/primaryText"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etDate"
            android:autofillHints=""
            android:hint="@string/enter_date_yyyy_mm_dd"
            android:backgroundTint="@color/blueAccent"
            android:inputType="Enter"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="TextFields" />

        <EditText
            android:id="@+id/etMorning"
            android:autofillHints=""
            android:hint="@string/morning_screen_time_min"
            android:inputType="number"
            android:padding="12dp"
            android:backgroundTint="@color/pinkAccent"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etAfternoon"
            android:hint="Afternoon Screen Time (min)"
            android:inputType="number"
            android:padding="12dp"
            android:backgroundTint="@color/pinkAccent"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etNotes"
            android:hint="Activity Notes"
            android:padding="12dp"
            android:backgroundTint="@color/blueAccent"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSave"
            android:text="Save Entry"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/blueAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnClear"
            android:text="Clear"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/pinkAccent"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDetails"
            android:text="View Details"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryText"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
